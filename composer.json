{
    "name": "almirhodzic/nova-toggle",
    "description": "A Laravel Nova 5 toggle field that allows quick boolean updates directly from the index view.",
    "type": "library",
    "keywords": [
        "laravel",
        "nova",
        "field",
        "toggle",
        "boolean",
        "ui",
        "component"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Almir Hodzic",
            "email": "hello@frontbyte.ch",
            "homepage": "https://demo.novafront.dev",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/almirhodzic/nova-toggle/issues",
        "source": "https://github.com/almirhodzic/nova-toggle",
        "docs": "https://github.com/almirhodzic/nova-toggle"
    },
    "homepage": "https://demo.novafront.dev",
    "require": {
        "php": "^8.2",
        "laravel/nova": "^5.0"
    },
    "require-dev": {
        "laravel/framework": "^10.0 || ^11.0 || ^12.0",
        "orchestra/testbench": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "AlmirHodzic\\NovaToggle\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AlmirHodzic\\NovaToggle\\ToggleServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('node_modules') || (shell_exec('npm install') && shell_exec('npm run build'));\""
        ],
        "post-update-cmd": [
            "@php -r \"shell_exec('npm install') && shell_exec('npm run build');\""
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "laravel/pint": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
