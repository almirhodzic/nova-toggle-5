{
    "name": "almirhodzic/nova-toggle",
    "description": "A Laravel Nova 5 toggle field that allows quick boolean updates directly from the index view.",
    "type": "library",
    "version": "1.0.0",
    "keywords": [
        "laravel",
        "nova",
        "field",
        "toggle",
        "boolean",
        "ui",
        "component"
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "./packages/nova-toggle",
            "options": {
                "symlink": true
            }
        }
    ],
    "authors": [
        {
            "name": "Almir Hodzic",
            "email": "hello@frontbyte.ch",
            "homepage": "https://frontbyte.ch",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/almirhodzic/nova-toggle/issues",
        "source": "https://github.com/almirhodzic/nova-toggle",
        "docs": "https://docs.frontbyte.ch/nova-toggle"
    },
    "homepage": "https://frontbyte.ch/nova-toggle",
    "require": {
        "php": "^8.2",
        "laravel/nova": "^5.0"
    },
    "require-dev": {
        "laravel/framework": "^10.0 || ^11.0",
        "orchestra/testbench": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "AlmirHodzic\\NovaToggle\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AlmirHodzic\\NovaToggle\\FieldServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "laravel/pint": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
